<div class="col-xs-4">

  <h1><%= @project.title %></h1>
  <h4><%= @project.date %></h4>
  <p><%= @project.description %></p>

  <h4>Tecnologies Used</h4>
  <%= @project.technologies.join(", ").gsub("_", " ") if @project.technologies %>
  <hr>
  <% if @project.link != "" %>
  	<%= link_to "Visit Project", @project.link, class: "btn btn-default", target: "_blank" %>
  <% end %>
</div>

<div class="col-xs-8">
	<% if @project.video != "" %>
		  <% regex = /src="\S+"/ %>
			<iframe <%= raw(@project.video[regex]) %> width="100%" height="344" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
	<% end %>

  <% if @project.image_url %>
		<%= image_tag @project.image_url, id: "project_image", class: "img-thumbnail" %>
	<% end %>
</div>
