<div class="col-xs-12">
  <h1>Listing projects</h1>

  <table class="table">
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Tech</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @projects.each do |project| %>
    <tr>
      <td><%= project.title %></td>
      <td><%= project.date.strftime("%B %Y") %></td>
      <td><%= project.technologies.join(", ") if project.technologies %></td>
      <td><%= "ok" if project.image %></td>
      <td><%= link_to 'Show', project %></td>
      <td><%= link_to 'Edit', edit_project_path(project) %></td>
      <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Project', new_project_path, class: "btn btn-default" %>
</div>
  
